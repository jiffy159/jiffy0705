@model IEnumerable<jiffy0705.Models.电影>

@{
    ViewData["Title"] = "Index";
}

<h2>电影主页</h2>

<p>
    <a asp-action="Create">创建新的</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.名字)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.分类)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.发布时间)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.名字)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.分类)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.发布时间)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">编辑</a> |
                <a asp-action="Details" asp-route-id="@item.Id">详细</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
